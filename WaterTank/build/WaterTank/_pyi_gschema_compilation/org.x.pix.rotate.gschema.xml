<schemalist>

  <schema id="org.x.pix.rotate" path="/org/x/pix/rotate/" gettext-domain="pix">
    <key name="resize" enum="org.x.pix.GthTransformResize">
      <default>'crop'</default>
    </key>
    <key name="keep-aspect-ratio" type="b">
      <default>true</default>
    </key>
    <key name="grid-type" enum="org.x.pix.GthGridType">
      <default>'thirds'</default>
    </key>
    <key name="background-color" type="s">
      <default>'#000'</default>
    </key>
  </schema>

</schemalist>
